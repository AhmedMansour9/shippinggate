<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:showIn="@layout/fragment_allpopular_products"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:id="@+id/sheetdirec"
    app:behavior_hideable="true"
    android:layout_gravity="bottom"

    app:behavior_peekHeight="@dimen/_220sdp"
    android:layout_height="@dimen/_220sdp"
>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Sorts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bc_cancel"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/cancel"
        android:gravity="center"
        android:id="@+id/T_Cancel"
        android:alpha=".5"
        android:textColor="#10435f"
        android:layout_below="@+id/recycler_Sorts"
        />


</RelativeLayout>